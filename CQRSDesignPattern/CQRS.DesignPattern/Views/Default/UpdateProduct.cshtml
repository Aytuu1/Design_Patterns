@model CQRS.DesignPattern.CQRSPattern.Results.GetProductUpdateQueryResult
@{
  Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">

  <form method="post">
    <label>Ürün ID</label>
    <input type="text" asp-for="ProductID" class="form-control" />
