 @model List<CQRS.DesignPattern.CQRSPattern.Results.GetProductQueryResult>
@{
  Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
  <br />
  <table class="table table-bordered">
    <tr>
      <th>#</th>
      <th>Ürün Adı</th>
      <th>Fiyat</th>
      <th>Stock</th>
      <th>Getir</th>
      <th>Sil</th>
      <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.ProductID</td>
        <td>@item.ProductName</td>
        <td>@item.Price</td>
        <td>@item.Stock</td>
        <td>
          <a href="/Default/GetProduct/@item.ProductID" class="btn btn-dark">ID'ye göre getir</a>
        </td>
        <td>
          <a href="/Default/DeleteProduct/@item.ProductID" class="btn btn-warning">SİL</a>
        </td>
        <td>
          <a href="/Default/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a>
        </td> 
      </tr>
    }
  </table>
  <a href="/Default/AddProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
</div>