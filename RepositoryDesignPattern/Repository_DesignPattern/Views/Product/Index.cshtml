@model List<EntityLayer.Concrete.Product>
@{
  Layout = null;
}

<div class="container">
  <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

  <div class="container">
    <br />
    <table class="table table-bordered">
      <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Fiyatı</th>
        <th>Ürün Stok</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
      </tr>
      @foreach (var item in Model)
      {
        <tr>
          <td>@item.ProductID</td>
          <td>@item.ProductName</td>
          <td>@item.ProductPrice</td>
          <td>@item.ProductStock</td>
         <td>@item.Category.CategoryName</td>
          <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-warning">Sil</a></td>
          <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
        </tr>
      }

    </table>
    <a href="/Product/AddProduct/" class="btn btn-outline-primary">Ürün Ekle</a>
  </div>
</div>
