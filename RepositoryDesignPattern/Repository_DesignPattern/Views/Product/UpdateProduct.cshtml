@model EntityLayer.Concrete.Product
@{
  Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
  <form method="post">
    <br />
    <input type="hidden" asp-for="ProductID" />
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Ürün Fiyat</label>
    <input type="text" asp-for="ProductPrice" class="form-control" />
    <br />
    <label>Ürün Stok</label>
    <input type="text" asp-for="ProductStock" class="form-control" />
    <br />
    <label>Kategori Adı</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.CategoryName, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Güncelle</button>

  </form>
</div>
