@using DesignPattern.Mediator.MediatorPattern.Results
@model List<GetAllProductQueryResult>

@{
  Layout = null;
}
<link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">

  <table class="table table-bordered mt-5">
    <tr>
      <th>#</th>
      <th>Ürün Adı</th>
      <th>Fiyatı</th>
      <th>Stok Sayısı</th>
      <th>Stok Türü</th>
      <th>Ürün Kategorisi</th>
      <th>Sil</th>
      <th>Güncelle</th>
      <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.ProductID</td>
        <td>@item.ProductName</td>
        <td>@item.ProductPrice</td>
        <td>@item.ProductStock</td>
        <td>@item.ProductStockType</td>
        <td>@item.ProductCategory</td>
        <td><a href="/Product/RemoveProduct/@item.ProductID" class="btn btn-warning">Sil</a></td>
        <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Product/GetProduct/@item.ProductID" class="btn btn-info">Detaylar</a></td>

      </tr>
    }
  </table>
  <td><a href="/Product/AddProduct/" class="btn btn-danger">Yeni Ürün Girişi</a></td>
</div>
